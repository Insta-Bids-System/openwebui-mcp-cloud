# OpenWebUI MCP Cloud - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE API KEYS (Required)
# =============================================================================

# GitHub Personal Access Token
# Get from: https://github.com/settings/tokens
# Required scopes: repo, read:user, user:email
# Example: ghp_1234567890abcdef1234567890abcdef12345678
GITHUB_TOKEN=ghp_YOUR_ACTUAL_TOKEN_HERE

# Brave Search API Key (Optional - for web search functionality)
# Get from: https://api.search.brave.com/
# Leave empty if you don't want web search capabilities
BRAVE_SEARCH_API_KEY=your_brave_search_key_here

# =============================================================================
# MCP CONFIGURATION
# =============================================================================

# MCP API Key for internal service authentication
# Default value works for local development
# Change for production deployment
MCP_API_KEY=local-mcp-key-for-testing

# =============================================================================
# GITHUB WRAPPER CONFIGURATION
# =============================================================================

# Default GitHub owner/organization for repository operations
# This gets automatically injected when not specified
# Change to your GitHub username or organization
GITHUB_DEFAULT_OWNER=Insta-Bids-System

# =============================================================================
# FILESYSTEM WRAPPER CONFIGURATION
# =============================================================================

# Base workspace path for file operations
# Default: /workspace (inside container)
# Usually doesn't need to be changed
WORKSPACE_BASE=/workspace

# =============================================================================
# OPENWEBUI CONFIGURATION (Optional)
# =============================================================================

# OpenWebUI Secret Key
# Used for session management and security
# Generate with: openssl rand -hex 32
WEBUI_SECRET_KEY=your-secret-key-here

# OpenWebUI Admin Email (Optional)
# Default admin user email
WEBUI_ADMIN_EMAIL=admin@example.com

# =============================================================================
# DOCKER CONFIGURATION (Optional)
# =============================================================================

# Docker network name
# Usually doesn't need to be changed
DOCKER_NETWORK=local-ai-net

# Container restart policy
# Options: no, always, unless-stopped, on-failure
RESTART_POLICY=unless-stopped

# =============================================================================
# LOGGING CONFIGURATION (Optional)
# =============================================================================

# Log level for MCP services
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable detailed request/response logging
# Set to true for debugging, false for production
DEBUG_LOGGING=false

# =============================================================================
# PERFORMANCE CONFIGURATION (Optional)
# =============================================================================

# Maximum number of concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Memory limit for containers (e.g., 512m, 1g, 2g)
MEMORY_LIMIT=1g

# =============================================================================
# SECURITY CONFIGURATION (Optional)
# =============================================================================

# Allowed origins for CORS (comma-separated)
# Default allows all origins for development
CORS_ORIGINS=*

# Enable rate limiting
RATE_LIMITING=false

# Rate limit: requests per minute
RATE_LIMIT_RPM=100

# =============================================================================
# CUSTOM EXTENSIONS (Optional)
# =============================================================================

# Additional MCP services to enable (comma-separated)
# Example: weather,calendar,database
ADDITIONAL_MCP_SERVICES=

# Custom GitHub API endpoint (for GitHub Enterprise)
# Leave empty for public GitHub
GITHUB_API_URL=

# Custom workspace directory on host
# Default: ./data/workspace
HOST_WORKSPACE_PATH=./data/workspace

# =============================================================================
# DEVELOPMENT CONFIGURATION (Optional)
# =============================================================================

# Enable development mode
# Shows more detailed errors and enables hot reload
DEVELOPMENT_MODE=false

# Enable profiling
# Adds performance metrics to logs
ENABLE_PROFILING=false

# Mock external services for testing
# Set to true to use mock responses instead of real APIs
MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# BACKUP CONFIGURATION (Optional)
# =============================================================================

# Enable automatic backups
AUTO_BACKUP=false

# Backup frequency in hours
BACKUP_FREQUENCY=24

# Maximum number of backups to keep
MAX_BACKUPS=7

# Backup destination path
BACKUP_PATH=./backups

# =============================================================================
# NOTIFICATION CONFIGURATION (Optional)
# =============================================================================

# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=

# Discord webhook URL for notifications
DISCORD_WEBHOOK_URL=

# Email configuration for notifications
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=notifications@example.com

# =============================================================================
# MONITORING CONFIGURATION (Optional)
# =============================================================================

# Enable Prometheus metrics
ENABLE_METRICS=false

# Prometheus metrics port
METRICS_PORT=9090

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# NOTES
# =============================================================================

# 1. Required variables are marked above
# 2. Optional variables have sensible defaults
# 3. For production, review all security settings
# 4. Never commit this file with real API keys
# 5. Use environment-specific files (.env.prod, .env.dev)
# 6. Restart services after changing configuration: ./stop-enhanced.sh && ./start-enhanced.sh 