# Production Environment Configuration
# Copy this to .env.production and fill in your values

# Domain Configuration
DOMAIN_NAME=your-domain.com

# Database Configuration (Use managed services)
POSTGRES_URL=postgresql://user:pass@db-host:5432/openwebui
REDIS_URL=rediss://default:pass@redis-host:25061/0?ssl_cert_reqs=none&decode_responses=true

# Security Keys (Generate with: openssl rand -hex 32)
WEBUI_SECRET_KEY=
MCP_API_KEY=
OPENWEBUI_API_KEY=  # Generate after OpenWebUI setup

# External Service Tokens
GITHUB_TOKEN=
DO_API_TOKEN=

# FileBrowser Credentials
FB_USERNAME=admin
FB_PASSWORD=  # Generate with: openssl rand -base64 16

# Optional: LLM Provider Keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=